## GLOBAL ##
# Switch input language
super + space
    ~/stuff/scripts/toggle-layout.sh
## Menus ##
# Finds repos and opens them in code
super + c
    ~/stuff/scripts/open-dir-in-code.sh
## PROGRAMS ##
# Launch st
ctrl + shift + Return
    SHELL=/bin/fish st

# Launch firefox
ctrl + shift + b
    firefox

# Launch dmenu
ctrl + shift + space
    dmenu_run

# Launch flameshot
ctrl + shift + plus
    flameshot gui

# Launch xcolor
ctrl + shift + minus
    xcolor -s

# Find Cursor
ctrl + shift + 0
    find-cursor -cf -s 200

# slock
super + l
    slock

# Volume controls
XF86AudioLowerVolume
    amixer -q sset Master --card=1 5%-

XF86AudioRaiseVolume
    amixer -q sset Master --card=1 5%+

XF86AudioMute
    amixer -q sset Master --card=1 toggle

